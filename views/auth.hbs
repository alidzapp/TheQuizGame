<div class="container messages" id="messages">
    {{>flashmessages}}
</div>

<div class="container auth">

    <form class="form-horizontal" method="post" action="/auth/signin">
        <fieldset>
            <div class="form-group">
                <label for="email" class="col-lg-2 control-label">Email</label>
                <div class="col-lg-10">
                    <input class="form-control" id="email" name="email" type="text" value="{{data.email}}">
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-lg-2 control-label">Password</label>
                <div class="col-lg-10">
                    <input class="form-control" type="password" id="password" name="password">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    </form>

    <form class="form-horizontal" method="post" action="/auth/signup">
        <fieldset>

            <div class="form-group">
                <div class="col-lg-12">
                    <label for="name" class="col-lg-6 control-label">Name</label>
                    <label for="username" class="col-lg-6 control-label">Username</label>
                </div>
                <div class="col-lg-12">
                    <input class="form-control col-lg-6" id="name" name="name" type="text">
                    <input class="form-control col-lg-6" id="username" name="username" type="text">
                </div>
            </div>



            <div class="form-group">
                <div class="col-lg-12">
                    <label for="email" class="col-lg-6 control-label">Email</label>
                    <label for="confirmemail" class="col-lg-6 control-label">Confirm email</label>
                </div>
                <div class="col-lg-12">
                    <input class="form-control col-lg-6" id="email" name="email" type="text">
                    <input class="form-control col-lg-6" id="confirmemail" name="confirmemail" type="text">
                </div>
            </div>


            <div class="form-group">
                <div class="col-lg-12">
                    <label for="password" class="col-lg-6 control-label">Password</label>
                    <label for="confirmpassword" class="col-lg-6 control-label">Confirm password</label>
                </div>
                <div class="col-lg-12">
                    <input class="form-control col-lg-6" id="password" name="password" type="password">
                    <input class="form-control col-lg-6" id="confirmpassword" name="confirmpassword" type="password">
                </div>
            </div>
            
             <div class="form-group">
                <div class="col-lg-12">
                    <label for="country_selector" class="col-lg-6 control-label">Country</label>
                </div>
                <div class="col-lg-12">
                    <input class="form-control col-lg-6" type="text" id="country_selector" name="country_selector">                    
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>

        </fieldset>
    </form>
</div>

